{
  "name": "Samba Backup",
  "version": "1.1",
  "slug": "samba_backup",
  "description": "Create snapshots and store them on a Samba share",
  "url": "https://github.com/thomasmauerer/hassio-addons/tree/master/samba-backup",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "once",
  "boot": "manual",
  "hassio_api": true,
  "hassio_role": "backup",
  "map": ["backup:rw"],
  "image": "thomasmauerer/samba-backup-{arch}",
  "options": {
    "host": null,
    "share": null,
    "target_dir": "",
    "username": "",
    "password": "",
    "keep_local": "all",
    "backup_password": ""
  },
  "schema": {
    "host": "str",
    "share": "str",
    "target_dir": "str",
    "username": "str",
    "password": "str",
    "keep_local": "match(^(all|[+]?\\d*)$)",
    "backup_password": "str"
  }
}
